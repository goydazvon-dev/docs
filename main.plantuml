    "backet": "user_profiles",
    "filename": "uuid"
  }
  json StorageGuild {
    "backet": "guild_profiles",
    "filename": "uuid"
  }
}


node "goyda-auth-service" {
  [Аутентификация] -> access_jwt
  [Аутентификация] -> refresh_jwt
  http - [Аутентификация]
  oauth -> [Аутентификация]
  refresh_jwt -> [Jwt refresher]
  [Jwt refresher] -> access_jwt
}

