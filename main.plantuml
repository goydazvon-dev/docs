node "goyda-guild-service" {
  [Настройка гильдии] <-- access_jwt
  [Настройка гильдии] <-> [Данные гильдии] 
  uuid <- [Данные гильдии] 
  аватарка_гильдии <- [Данные гильдии]
  аватарка_гильдии <-> [StorageGuild]
  название_гильдии <- [Данные гильдии]
  [Участники гильдии] -> [Users]
}

